<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.spring20221017.mapper.Mapper08" >
    <select id="getProductName" resultType="string">
        SELECT ProductName
        FROM Products
<!--    WHERE Price <= 20.00 안됨-->
<!--    xml에서는 <, > 등의 기호를 사용할 수 없음-->
<!--    1. entity 로 해결할 수 있다    -->
        WHERE Price &lt;= 20.00
    </select>

    <select id="getProductName2" resultType="string">
    <!-- 2. CDATA 로 해결 -->
        <![CDATA[
            SELECT ProductName
            FROM Products
            WHERE Price <= 20.00
        ]]>
    </select>

    <!--    1. entity    -->
    <select id="getEmployeeFirstName" resultType="string">
        SELECT FirstName
        FROM Employees
        WHERE BirthDate &lt; '1960-01-01'
    </select>

    <!--    2. CDATA    -->
    <select id="getEmployeeFirstName2" resultType="string">
        <![CDATA[
            SELECT FirstName
            FROM Employees
            WHERE BirthDate < '1960-01-01'
        ]]>
    </select>
</mapper>