<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.spring20221017.mapper.member.MemberMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Member (id, password, email)
        VALUES (#{id}, #{password}, #{email})
    </insert>

    <select id="selectAll" resultType="com.example.spring20221017.domain.member.MemberDto">
        SELECT
            id,
            '숨김' password,
            email,
            inserted
        FROM Member
        ORDER By id
    </select>

    <select id="selectById" resultType="com.example.spring20221017.domain.member.MemberDto">
        SELECT
            id,
            password,
            email,
            inserted
        FROM Member
        WHERE id = #{id}
    </select>

    <update id="update">
        UPDATE Member
        SET
            password = #{password},
            email = #{email}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM Member
        WHERE id = #{id}
    </delete>

</mapper>