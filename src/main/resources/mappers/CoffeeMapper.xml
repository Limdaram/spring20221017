<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.spring20221017.mapper.CoffeeMapper" >
    <select id="getCoffeeList" resultType="com.example.spring20221017.domain.sample.CoffeeDto">
        SELECT name, coffee
        FROM Coffee
        ORDER BY name
    </select>

    <update id="update">
        UPDATE Coffee
        SET coffee = #{coffee}
        WHERE name = #{name}
    </update>
</mapper>